-- Tempo de espera antes de checar novamente
local checkInterval = 0.1

-- Nome do item a ser detectado
local itemName = "GunDrop"

-- Função para teleportar o jogador para a posição do item
local function teleportToItem(item)
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    
    -- Armazena a posição atual do jogador
    local originalPosition = character.HumanoidRootPart.CFrame

    -- Teleporta o jogador para o item
    character.HumanoidRootPart.CFrame = item.CFrame

    -- Espera 1 segundo
    wait(1)

    -- Volta para a posição original
    character.HumanoidRootPart.CFrame = originalPosition
end

-- Função para detectar o item
local function detectItem()
    while true do
        -- Procura o item no mapa
        local item = game.Workspace:FindFirstChild(itemName)
        
        if item then
            print("Item detectado: " .. itemName)
            teleportToItem(item)
        end

        -- Espera um tempo antes de checar novamente
        wait(checkInterval)
    end
end

-- Executa a detecção do item em paralelo
spawn(detectItem)
