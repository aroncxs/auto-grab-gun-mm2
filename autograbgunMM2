-- Função para verificar a existência de "GunDrop" e teleportar
local function checkAndTeleport()
    local player = game.Players.LocalPlayer
    local character = player.Character
    if not character then return end

    -- Armazena a posição original do jogador
    local originalPosition = character.HumanoidRootPart.CFrame

    -- Loop para verificar constantemente se o "GunDrop" existe
    while true do
        -- Tenta encontrar o "GunDrop"
        local gunDrop = game.Workspace:FindFirstChild("GunDrop")
        
        if gunDrop then
            -- Teleporta para o "GunDrop"
            print("GunDrop encontrado! Teleportando...")
            character.HumanoidRootPart.CFrame = gunDrop.CFrame

            -- Espera 1 segundo
            wait(1)

            -- Retorna à posição original
            print("Retornando à posição original...")
            character.HumanoidRootPart.CFrame = originalPosition
        end

        -- Aguarda um tempo curto antes de verificar novamente (0.1s)
        wait(0.1)
    end
end

-- Inicia o script de verificação e teleporte
checkAndTeleport()
